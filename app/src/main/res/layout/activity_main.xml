<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.alumno.parcial2.MainActivity"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro de Usuario"
        android:id="@+id/tvTitulo"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <TextView
        android:text="Bienvenido a la primera aplicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/tvBienvenido"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:text="Buffet-UTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/tvBuffet"
        android:layout_gravity="center_horizontal"/>


    <ImageView
        android:id="@+id/imImagen"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="@+id/tvBuffet"
        android:src="@android:drawable/ic_dialog_email"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"

        app:srcCompat="@android:color/holo_red_light"
        tools:srcCompat="@tools:sample/avatars[4]" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:text="Mail"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView2"
        android:id="@+id/tvEmail" />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="12"
        android:layout_below="@+id/tvEmail"
        android:layout_alignParentStart="true"
        android:id="@+id/etEmail" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:text="Clave"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvEmail"
        android:id="@+id/tvClave" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="12"
        android:layout_below="@+id/tvClave"
        android:id="@+id/etClave" />


</LinearLayout>
    <CheckBox
        android:id="@+id/cbxGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recordar datos" />

    <Button
        android:text="Ingresar"
        android:layout_width="120dp"
        android:layout_height="37dp"
        android:id="@+id/btnIngresar"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:text="o"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvO"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:text="Registrarme"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/btnRegistrarme"
        android:layout_gravity="center_horizontal" />


</LinearLayout>
